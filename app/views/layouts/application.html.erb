<!DOCTYPE html>
<html>
  <head>
    <title>CompanyReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/nav' %>
    <%= yield %>
    <%= yield :after_js %>
    <% if Rails.env.development? %>
      <%= debug params %>
      <%= "Current user: #{current_user.email}" if current_user %>
      <%= "Current company: #{current_company.name}, #{current_company.id}" if current_company %>
    <% end %>
  </body>
</html>
