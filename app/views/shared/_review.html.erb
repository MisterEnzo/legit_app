<div class="row">
  <div class="review card light-blue lighten-5 col s5">
    <div class="reviewer">
      <span><%= image_tag gravatar(review.user), class: "avatar" %> <%= review.user.email %></span>
    </div>
    <div class="card-title">
      <p class="review-title"><%= link_to review.title, company_review_path(review.company, review) %></p>
    </div>
    <div>
      <%= star_rating_helper(review.rating) %>
    </div>
    <div class="card-content">
      <p class="review-content"><%= review.content %></p>

      <% if review.image.model.image? %>
      <%= image_tag review.image.url, width: '40%' %>
      <% end %>
    </div>
    <% if policy(review).edit? %>
      <%= link_to 'Edit', edit_company_review_path(@company, review) %>
    <% end %>
    <% if policy(review).destroy? %>
      <%= link_to 'Delete', company_review_path(review.company, review), method: :delete, data: {confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <% if review.response %>
    <div class="response card col s5">
      <div class="company">
        <span><%= review.response.company.name %>'s Response:</span>
      </div>
      <div class="card-title">
        <p class=""><%= review.response.title %></p>
      </div>
      <div class="card-content">
        <p class=""><%= review.response.content %></p>
      </div>
    </div>
  <% end %>
</div>