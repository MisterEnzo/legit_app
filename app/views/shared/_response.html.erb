<div class="review-response card col s5 green lighten-5">
  <div class="card-author">
    <h6><%= company.name %>'s Response:</h6>
  </div>
  <div>
    <h5><%= response.title %></h5>
  </div>
  <div class="card-content">
    <p><%= response.content %></p>
  </div>
  <% if current_company == @company %>
    <%= link_to 'Edit Response', edit_company_review_response_path(company, review, response), class: 'btn-small' %>
    <%= link_to 'Delete Response', company_review_response_path(company, review, response), method: :delete, class: 'btn-small red' %>
  <% end %>
</div>